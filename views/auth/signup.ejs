<div class="container">
  <div class="columns is-multiline">
    <div class="column is-8 is-offset-2 register">
      <div class="columns">
        <div class="column is-4"></div>
        <div class="column is-4 has-text-centered">
          <h1 class="title is-3">Signup</h1>
          <form action="/auth/signup" method="POST">
            <div class="field">
              <div class="control">
                <input class="input is-small" name="name" type="text" placeholder="Name" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-small" name="email" type="email" placeholder="Email" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-small" name="password" type="password" placeholder="Password" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <select class="input is-small" name="timezone" id="timezone">
                  <option value="" selected disabled>Timezone</option>
                  <option value="-4">EDT (Knoxville)</option>
                  <option value="-5">CDT (Nashville)</option>
                </select>
              </div>
            </div>
            <button class="button is-block is-info is-fullwidth is-small" type="submit">Sign Up</button>
          </form>
        </div>
        <div class="column is-4"></div>
      </div>
    </div>
  </div>
</div>