<div class="container">
    <div class="section">
        <div class="columns">
            <div class="column has-text-centered">
                <h1 class="title mb-0">Edit Technique</h1>
                (<a href="/techniques/<%= technique.id %>">cancel</a>)
            </div>
        </div>
        <div class="columns">
            <div class="column is-4"></div>
                <div class="column is-4">
                    <form action="/techniques/edit/<%= technique.id %>/?_method=PUT" method="POST">
                        <div class="field">
                            <div class="control">
                                <label for="name">Name</label>
                                <input class="input is-small" type="text" id="name" name="name" value="<%= technique.name %>" required />
                            </div>
                        </div>
                        <button class="button is-block is-info is-fullwidth is-small" type="submit">Submit</button>
                    </form>
                </div>
            </div>
            <div class="column is-4"></div>
        </div>
    </div>
</div>