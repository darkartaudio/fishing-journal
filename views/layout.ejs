<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Fishing Journal</title>
  
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
  <link rel="manifest" href="/images/site.webmanifest">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
  <!-- Bulma Version 0.9.0-->
  <link rel="stylesheet" href="https://unpkg.com/bulma@0.9.4/css/bulma.min.css" />
  <link rel="stylesheet" type="text/css" href="/css/cards.css">
  <link rel="stylesheet" type="text/css" href="/css/admin.css">
  <link rel="stylesheet" type="text/css" href="/css/landing.css">
  <link rel="stylesheet" type="text/css" href="/css/register.css">
  <link rel="stylesheet" type="text/css" href="/css/custom.css">
</head>

<body>
  <section class="hero is-info is-fullheight">
    <div class="hero-head">
      <!-- START NAV -->
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <a class="navbar-item brand-text" href="/">
              Fishing Journal
            </a>
            <div class="navbar-burger burger" data-target="navMenu">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
          <div id="navMenu" class="navbar-menu">
            <div class="navbar-start">
              <a class="navbar-item" href="/entries">Entries</a>
              <a class="navbar-item" href="/species">Species</a>
              <a class="navbar-item" href="/techniques">Techniques</a>
              <a class="navbar-item" href="/lures">Lures</a>
            </div>
          </div>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <% if (!currentUser) {%>
                  <p class="control">
                    <a class="button is-small is-info is-outlined" href="/auth/signup">
                      <span class="icon">
                        <i class="fa fa-user-plus"></i>
                      </span>
                      <span>Signup</span>
                    </a>
                  </p>
                  <p class="control">
                    <a class="button is-small is-info is-outlined" href="/auth/login">
                      <span class="icon">
                        <i class="fa fa-user"></i>
                      </span>
                      <span>Login</span>
                    </a>
                  </p>
                <% } else { %>
                  <p class="control">
                    <a class="button is-small is-info is-outlined" href="/auth/logout">
                      <span class="icon">
                        <i class="fa fa-user"></i>
                      </span>
                      <span>
                        Logout
                      </span>
                    </a>
                  </p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </nav>
      <!-- END NAV -->
      <%- include('partials/alerts') %>
    </div>
    
    <div class="hero-body">
      <div class="container has-text-centered">
        <%- body %>
      </div>
    </div>
  </section>

  <script async type="text/javascript" src="/js/bulma.js"></script>
</body>

</html>