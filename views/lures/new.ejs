<div class="container">
    <div class="section">
        <div class="columns">
            <div class="column has-text-centered">
                <h1 class="title mb-0">New Lure</h1>
                (<a href="/lures">cancel</a>)
            </div>
        </div>
        <div class="columns">
            <div class="column is-4"></div>
            <div class="column is-4">
                <form action="/lures/new" method="POST">
                    <div class="field">
                        <div class="control">
                            <label for="name">Name</label>
                            <input class="input is-small" type="text" id="name" name="name" placeholder="Lure name..." required />
                        </div>
                    </div>
                    <button class="button is-block is-info is-fullwidth is-small" type="submit">Submit</button>
                </form>
            </div>
            <div class="column is-4"></div>
        </div>
    </div>
</div>