<div class="container">
    <div class="section">
        <div class="columns">
          <div class="column has-text-centered">
            <h1 class="title mb-0">Delete Lure</h1>
            <form method="POST" action="/lures/<%= lure.id %>?_method=DELETE">
                <input class="button is-danger mt-1" type="submit" value="DELETE">
            </form>
          </div>
        </div>
        <div class="row columns is-multiline">
            <div class="column is-6">
                <div class="media-content">
                    <p>
                        <%= lure.name %><br />
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>