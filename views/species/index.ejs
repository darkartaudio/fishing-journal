<div class="container">
    <div class="section">
        <div class="columns">
            <div class="column has-text-centered">
                <h1 class="title mb-0">Species</h1>
                (<a href="/species/new">new</a>)
            </div>
        </div>
        <div id="app" class="row columns is-multiline">
            <div class="column is-4"></div>
            <div class="column is-4">
                <% if(species.length > 0) { 
                    species.forEach(s => { %>
                    <a href="/species/<%= s.id %>">
                        <div class="card large">
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <figure class="image is-256x256">
                                            <img src="<%= s.img %>" alt="<%= s.name %>">
                                        </figure>
                                    </div>
                                    <div class="media-right">
                                        <p class="is-6">
                                            <%= s.name %><br />
                                            <a class="has-text-weight-bold" href="<%= s.wiki %>">wikipedia</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                <% });
                } else { %>
                    <p>
                        No species present.
                    </p>
                <% } %>
            </div>
            <div class="column is-4"></div>
        </div>
    </div>
</div>