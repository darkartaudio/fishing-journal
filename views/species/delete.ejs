<div class="container">
    <div class="section">
        <div class="columns">
          <div class="column has-text-centered">
            <h1 class="title mb-0">Delete Species</h1>
            <form method="POST" action="/species/<%= specie.id %>?_method=DELETE">
                <input class="button is-danger mt-1" type="submit" value="DELETE">
            </form>
          </div>
        </div>
        <div class="row columns is-multiline">
            <div class="column is-6">
                <div class="media-content">
                    <figure class="image is-128x128">
                        <img src="<%= specie.img %>" alt="<%= specie.name %>" />
                    </figure>
                    <p>
                        <%= specie.name %><br />
                        <a href="<%= specie.wiki %>">wikipedia</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>