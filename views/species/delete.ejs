<div class="container">
    <div class="section">
        <div class="columns">
          <div class="column has-text-centered">
            <h1 class="title mb-0">Delete Species</h1>
            (<a href="/species/<%= specie.id %>">cancel</a>)
          </div>
        </div>
        <div id="app" class="row columns is-multiline">
            <div class="column is-4"></div>
            <div class="column is-4">
                <div class="card large">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <figure class="image is-256x256">
                                    <img src="<%= specie.img %>" alt="<%= specie.name %>" />
                                </figure>
                                <p>
                                    <%= specie.name %><br />
                                    <a class="has-text-weight-bold" href="<%= specie.wiki %>">wikipedia</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <form method="POST" action="/species/<%= specie.id %>?_method=DELETE">
                    <input class="button is-danger mt-1" type="submit" value="DELETE">
                </form>
            </div>
            <div class="column is-4"></div>
        </div>
    </div>
</div>