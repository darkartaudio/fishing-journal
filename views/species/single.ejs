<div class="container">
    <div class="section">
        <div class="columns">
          <div class="column has-text-centered">
            <h1 class="title mb-0">Species</h1>
            (<a href="/species/edit/<%= specie.id %>">edit</a>) | (<a href="/species/delete/<%= specie.id %>">delete</a>)
          </div>
        </div>
        <div class="row columns is-multiline">
            <div class="column is-6">
                <div class="media-content">
                    <figure class="image is-128x128">
                        <img src="<%= specie.img %>" alt="<%= specie.name %>" />
                    </figure>
                    <p>
                        <%= specie.name %><br />
                        <a href="<%= specie.wiki %>">wikipedia</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>